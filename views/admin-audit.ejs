<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Logs - VPS Monitor Pro+</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: <%= settings.primary_color || '#6366f1' %>;
        }
        .sidebar {
            background: #1a1c23;
            min-height: 100vh;
            color: white;
        }
        .sidebar .nav-link {
            color: #b0b3b8;
            padding: 0.75rem 1rem;
            margin: 0.25rem 0;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: var(--primary-color);
            color: white;
        }
        .audit-log { border-left: 4px solid var(--primary-color); }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-3">
                    <h4 class="text-center mb-4">
                        <i class="fas fa-server me-2"></i>VPS Monitor
                    </h4>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/nodes">
                                <i class="fas fa-server me-2"></i>Nodes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/alerts">
                                <i class="fas fa-bell me-2"></i>Alerts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">
                                <i class="fas fa-users me-2"></i>Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/settings">
                                <i class="fas fa-cog me-2"></i>Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/audit">
                                <i class="fas fa-clipboard-list me-2"></i>Audit Logs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/profile">
                                <i class="fas fa-user me-2"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a class="nav-link text-danger" href="/admin/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-4">
                <!-- Navbar -->
                <nav class="navbar navbar-light bg-white border-bottom py-3">
                    <div class="container-fluid">
                        <span class="navbar-brand">
                            <i class="fas fa-clipboard-list me-2"></i>Audit Logs
                        </span>
                        <div class="d-flex align-items-center">
                            <span class="me-3">Welcome, <%= user.full_name %></span>
                            <img src="<%= user.avatar || '/img/default-avatar.png' %>" alt="Avatar" class="rounded-circle" width="40" height="40">
                        </div>
                    </div>
                </nav>

                <!-- Audit Logs -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-history me-2"></i>System Audit Trail
                                    <span class="badge bg-primary ms-2"><%= logs.length %> entries</span>
                                </h5>
                            </div>
                            <div class="card-body p-0">
                                <% if (logs.length === 0) { %>
                                <div class="text-center py-5">
                                    <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                                    <h5>No Audit Logs</h5>
                                    <p class="text-muted">System activity will appear here.</p>
                                </div>
                                <% } else { %>
                                <div class="list-group list-group-flush">
                                    <% logs.forEach(function(log) { %>
                                    <div class="list-group-item audit-log">
                                        <div class="row">
                                            <div class="col-md-2">
                                                <strong><%= log.username || 'System' %></strong>
                                                <br>
                                                <small class="text-muted">
                                                    <%= new Date(log.created_at).toLocaleDateString() %>
                                                    <br>
                                                    <%= new Date(log.created_at).toLocaleTimeString() %>
                                                </small>
                                            </div>
                                            <div class="col-md-2">
                                                <span class="badge bg-<%= 
                                                    log.action.includes('login') ? 'success' : 
                                                    log.action.includes('logout') ? 'secondary' :
                                                    log.action.includes('delete') ? 'danger' :
                                                    log.action.includes('create') ? 'success' :
                                                    log.action.includes('update') ? 'warning' : 'info'
                                                %>">
                                                    <%= log.action %>
                                                </span>
                                            </div>
                                            <div class="col-md-6">
                                                <% if (log.details) { 
                                                    try {
                                                        const details = JSON.parse(log.details);
                                                %>
                                                    <%= Object.entries(details).map(([key, value]) => 
                                                        `<strong>${key}:</strong> ${typeof value === 'object' ? JSON.stringify(value) : value}`
                                                    ).join(', ') %>
                                                <% } catch (e) { %>
                                                    <%= log.details %>
                                                <% } } else { %>
                                                    <span class="text-muted">No details</span>
                                                <% } %>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <% if (log.ip_address) { %>
                                                <small class="text-muted">
                                                    <i class="fas fa-network-wired me-1"></i>
                                                    <%= log.ip_address %>
                                                </small>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <h4><%= logs.filter(l => l.action.includes('login')).length %></h4>
                                <p class="mb-0">User Logins</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <h4><%= logs.filter(l => l.action.includes('create')).length %></h4>
                                <p class="mb-0">Creations</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <h4><%= logs.filter(l => l.action.includes('update')).length %></h4>
                                <p class="mb-0">Updates</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body text-center">
                                <h4><%= logs.filter(l => l.action.includes('delete')).length %></h4>
                                <p class="mb-0">Deletions</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>