<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nodes Management - VPS Monitor Pro+</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: <%= settings.primary_color || '#6366f1' %>;
        }
        .sidebar {
            background: #1a1c23;
            min-height: 100vh;
            color: white;
        }
        .sidebar .nav-link {
            color: #b0b3b8;
            padding: 0.75rem 1rem;
            margin: 0.25rem 0;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: var(--primary-color);
            color: white;
        }
        .status-online { color: #28a745; }
        .status-offline { color: #dc3545; }
        .badge-group { background: var(--primary-color); }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 sidebar p-0">
                <div class="p-3">
                    <h4 class="text-center mb-4">
                        <i class="fas fa-server me-2"></i>VPS Monitor
                    </h4>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">
                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/nodes">
                                <i class="fas fa-server me-2"></i>Nodes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/alerts">
                                <i class="fas fa-bell me-2"></i>Alerts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">
                                <i class="fas fa-users me-2"></i>Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/settings">
                                <i class="fas fa-cog me-2"></i>Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/audit">
                                <i class="fas fa-clipboard-list me-2"></i>Audit Logs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/profile">
                                <i class="fas fa-user me-2"></i>Profile
                            </a>
                        </li>
                        <li class="nav-item mt-3">
                            <a class="nav-link text-danger" href="/admin/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 ms-sm-auto px-4">
                <!-- Navbar -->
                <nav class="navbar navbar-light bg-white border-bottom py-3">
                    <div class="container-fluid">
                        <span class="navbar-brand">
                            <i class="fas fa-server me-2"></i>Nodes Management
                        </span>
                        <div class="d-flex align-items-center">
                            <span class="me-3">Welcome, <%= user.full_name %></span>
                            <img src="<%= user.avatar || '/img/default-avatar.png' %>" alt="Avatar" class="rounded-circle" width="40" height="40">
                        </div>
                    </div>
                </nav>

                <!-- Add Node Button -->
                <div class="d-flex justify-content-between align-items-center mt-4 mb-3">
                    <h4>All Nodes (<%= nodes.length %>)</h4>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addNodeModal">
                        <i class="fas fa-plus me-2"></i>Add Node
                    </button>
                </div>

                <!-- Nodes Table -->
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Location</th>
                                        <th>Groups</th>
                                        <th>Last Seen</th>
                                        <th>Alerts</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% nodes.forEach(function(node) { %>
                                    <tr>
                                        <td>
                                            <strong><%= node.name %></strong>
                                            <% if (node.hostname) { %>
                                                <br><small class="text-muted"><%= node.hostname %></small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (node.is_online) { %>
                                                <span class="status-online">
                                                    <i class="fas fa-circle me-1"></i>Online
                                                </span>
                                            <% } else { %>
                                                <span class="status-offline">
                                                    <i class="fas fa-circle me-1"></i>Offline
                                                </span>
                                            <% } %>
                                        </td>
                                        <td><%= node.location || 'Unknown' %></td>
                                        <td>
                                            <% if (node.group_tags && node.group_tags.length > 0) { %>
                                                <% node.group_tags.forEach(function(tag) { %>
                                                    <span class="badge badge-group me-1"><%= tag %></span>
                                                <% }); %>
                                            <% } else { %>
                                                <span class="text-muted">None</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (node.last_seen) { %>
                                                <small><%= new Date(node.last_seen).toLocaleString() %></small>
                                            <% } else { %>
                                                <span class="text-muted">Never</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (node.active_alerts > 0) { %>
                                                <span class="badge bg-danger"><%= node.active_alerts %></span>
                                            <% } else { %>
                                                <span class="badge bg-success">0</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/admin/nodes/view/<%= node.id %>" class="btn btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/admin/nodes/edit/<%= node.id %>" class="btn btn-outline-secondary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <% if (user.role === 'admin') { %>
                                                <button class="btn btn-outline-danger delete-node" data-id="<%= node.id %>" data-name="<%= node.name %>">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                    
                                    <% if (nodes.length === 0) { %>
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">
                                            <i class="fas fa-server fa-3x mb-3"></i>
                                            <p>No nodes found. Add your first node to get started.</p>
                                        </td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Node Modal -->
    <div class="modal fade" id="addNodeModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Node</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/admin/nodes/add">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Node Name *</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hostname</label>
                            <input type="text" class="form-control" name="hostname">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">IP Alias</label>
                            <input type="text" class="form-control" name="ip_alias">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Location</label>
                            <input type="text" class="form-control" name="location" value="Unknown">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Group Tags (comma separated)</label>
                            <input type="text" class="form-control" name="group_tags" placeholder="web, database, backup">
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="public" checked>
                                    <label class="form-check-label">Public</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="status_page_visible" checked>
                                    <label class="form-check-label">Show on Status Page</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Node</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Delete node confirmation
        document.querySelectorAll('.delete-node').forEach(btn => {
            btn.addEventListener('click', function() {
                const nodeId = this.getAttribute('data-id');
                const nodeName = this.getAttribute('data-name');
                
                if (confirm(`Are you sure you want to delete node "${nodeName}"? This action cannot be undone.`)) {
                    fetch(`/admin/nodes/delete/${nodeId}`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Error deleting node: ' + data.error);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Error deleting node');
                    });
                }
            });
        });
    </script>
</body>
</html>